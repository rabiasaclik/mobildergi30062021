<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
    <shape android:shape="rectangle">
    <corners android:radius="3dip"></corners>
    <stroke android:width="1dip" android:color="#33ade6"></stroke>
    <gradient android:angle="-90" android:startColor="#2c93c3" android:endColor="#3dbffb"></gradient>

</shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"></corners>
            <stroke android:width="1dip" android:color="#33ade6"></stroke>
            <solid android:color="#47cde6"></solid>

        </shape>
    </item>


    <item >

        android:drawable="@drawable/button_pressed"
        <shape android:shape="rectangle">
            <corners android:radius="3dip"></corners>
            <stroke android:width="1dip" android:color="#33ade6"></stroke>
            <gradient android:angle="-90" android:startColor="#5ac0f0" android:endColor="#4ca7d2"></gradient>




        </shape>


    </item>

</selector>



