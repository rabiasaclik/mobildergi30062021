<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_above="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            >


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:gravity="center"
                android:text="HGM UYGULAMALARI"
                android:textStyle="bold"
                android:textSize="15sp"
                />


            <ImageView
                android:id="@+id/atlas"
                android:layout_width="140dp"
                android:layout_height="145dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/hgm_atlas" />

            <Button
                android:id="@+id/buttonAtlas"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/btnStyleSeagull"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="HGM ATLAS UYGULAMASI"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/geoportal"
                android:layout_width="140dp"
                android:layout_height="145dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/hgm_geoportal" />

            <Button
                android:id="@+id/buttonGeoportal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/btnStyleSeagull"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="HGM GEOPORTAL UYGULAMASI"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/temelHesaplamalar"
                android:layout_width="240dp"
                android:layout_height="145dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/temel_hesaplamalar"/>

            <Button
                android:id="@+id/buttonTemelHesaplamalar"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/btnStyleSeagull"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="TEMEL JEODEZİK HESAPLAMALAR"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/temelJeodezik"
                android:layout_width="240dp"
                android:layout_height="145dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/temel_aglar"/>

            <Button
                android:id="@+id/buttonTemelJeodezik"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/btnStyleSeagull"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="TEMEL JEODEZİK AĞLAR HARİTASI"
                android:textSize="18sp" />





        </LinearLayout>
    </ScrollView>
</RelativeLayout>