<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_above="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:text=""
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/hgm_new1.png"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/magazine_last" />



            <Button
                android:id="@+id/eDergiler"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/btnStyleSeagull"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="E-DERGİLER"
                android:textSize="18sp" />

            <Button
                android:id="@+id/ozelSayilar"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/btnStyleSeagull"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="ÖZEL SAYILAR"
                android:textSize="18sp" />

            <Button
                android:id="@+id/makaleSorgulama"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/btnStyleSeagull"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="MAKALE SORGULAMA"
                android:textSize="18sp" />

            <Button
                android:id="@+id/dergiYonetimKurulu"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/btnStyleSeagull"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="DERGİ YÖNETİM KURULU"
                android:textSize="18sp" />

            <Button
                android:id="@+id/dergiBilimKurulu"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/btnStyleSeagull"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="DERGİ BİLİM KURULU"
                android:textSize="18sp" />

            <Button
                android:id="@+id/makaleYazımEsasları"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/btnStyleSeagull"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="MAKALE YAZIM ESASLARI"
            android:textSize="18sp" />

            <Button
                android:id="@+id/hgmUygulamaları"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/btnStyleSeagull"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="HGM UYGULAMALARI"
                android:textSize="18sp"

                />
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:itemBackground="@color/colorPrimary2"
        app:itemIconTint="#ffffff"
        app:itemTextColor="#ffffff"
        app:menu="@menu/navigationbar" />
</RelativeLayout>